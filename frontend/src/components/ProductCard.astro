---
// src/components/ProductCard.astro
const { title, price, imageUrl, discountPercentage = null } = Astro.props;
const hasDiscount = discountPercentage && discountPercentage > 0;

// Calcular precio con descuento
const finalPrice = hasDiscount ? price * (1 - discountPercentage / 100) : price;
---

<a href="#" class="group block bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden">
  <div class="relative">
    <img
      src={imageUrl}
      alt={title}
      class="w-full h-64 object-cover object-center group-hover:scale-105 transition-transform duration-300"
    />
    {hasDiscount && (
      <span class="absolute top-2 left-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-md">
        -{discountPercentage}%
      </span>
    )}
  </div>

  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 truncate">{title}</h3>

    <div class="mt-2 flex items-center space-x-2">
      {hasDiscount ? (
        <>
          <span class="text-lg font-bold text-gray-900">${finalPrice.toFixed(2)}</span>
          <span class="text-sm text-gray-500 line-through">${price.toFixed(2)}</span>
        </>
      ) : (
        <span class="text-lg font-bold text-gray-900">${price.toFixed(2)}</span>
      )}
    </div>
  </div>
</a>