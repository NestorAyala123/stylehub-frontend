---
// src/pages/checkout.astro
const cart = JSON.parse(localStorage.getItem('cart') || '[]');
const total = cart.reduce((sum: any, item: { price: any; }) => sum + item.price, 0).toFixed(2);
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Checkout - StyleHub</title>
  <link rel="stylesheet" href="/src/styles/global.css" />
</head>
<body class="bg-gray-50 min-h-screen">
  <Headers />
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Checkout</h1>
    {cart.length === 0 ? (
      <p class="text-gray-500">Tu carrito está vacío</p>
    ) : (
      <>
        <p class="text-lg">Tienes {cart.length} producto(s) en tu carrito.</p>
        <p class="text-xl font-bold mt-2">Total: ${total}</p>
        <button class="mt-4 bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700">
          Finalizar Compra
        </button>
      </>
    )}
  </main>
</body>
</html>